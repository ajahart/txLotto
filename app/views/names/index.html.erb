<p id="notice"><%= notice %></p>
<h1>Listing names</h1>

<table border="black">
  <tr>
    <th> ID </th>
    <th> Name </th>
    <th> Total Tickets </th>
    <th> Original odds<br /> w/Break Even <br />Prizes</th>
    <th> Original <br />I.T.M. odds </th>
    <th> Current <br />I.T.M. odds </th>
    <th> Grand Prizes <br />Remaining </th>
  </tr>

<% @names.each do |name| %>
<% if name.active == 1 %>
  <tr>
    <td><%= name.id %></td>
    <td><%= name.gameName %></td>
    <td><%= name.tickets %></td>
    <td><%= name.origbeOdds %></td>
    <td><%= name.origOdds %></td>
    <td><%= name.currOdds %></td>
    <td><%= name.grandRemain %></td>
    <td><a href="<%= name.url %>" target="_blank">Link</a>
    <td><%= link_to 'Show', name %></td>
    <td><%= link_to 'Edit', edit_name_path(name) %></td>
    <td><%= link_to 'Destroy', name, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
  <% else %>
    <tr>
    <td><font color = "red"><%= name.id %></font></td>
    <td><%= name.gameName %><font color = "red"> - CLOSED!!!</font></td>
    <td><font color = "red"><%= name.tickets %></font></td>
    <td><font color = "red"><%= name.origbeOdds %></font></td>
    <td><font color = "red"><%= name.origOdds %></font></td>
    <td><font color = "red"><%= name.currOdds %></font></td>
    <td><font color = "red"><%= name.grandRemain %></font></td>
    <td><a href="<%= name.url %>" target="_blank">Link</a>
    <td><%= link_to 'Show', name %></td>
    <td><%= link_to 'Edit', edit_name_path(name) %></td>
    <td><%= link_to 'Destroy', name, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
  <% end%>
<% end %>
</table>

